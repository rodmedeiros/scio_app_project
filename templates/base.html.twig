<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="ie8 lt-ie9"> <![endif]-->
<!--[if IE 9]>         <html class="ie9 gt-ie8"> <![endif]-->
<!--[if gt IE 9]><!--> <html class="gt-ie8 gt-ie9 not-ie"> <!--<![endif]-->
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{% block title %}ScioApp{% endblock %}</title>
        <meta name="description" content="Midia Park">
        <meta name="viewport" content="width=device-width">
        <meta name="HandheldFriendly" content="true" >
        <meta name="MobileOptimized" content="width" >
        {% block meta %}{% endblock %}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="http://cdn.linearicons.com/free/1.0.0/icon-font.min.css" rel="stylesheet" type="text/css">
            <link href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css">
            <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        {% endblock %}
        <script type="text/javascript">
            {% block js_vars %}{% endblock %}
        </script>
    </head>
{% block body %}
    <body>
        <!-- navbar partial-->
        {{ include('_navbar.html.twig') }}
        <!-- submenu categories partial-->
        {{ include('_categories.html.twig') }}
        <!-- sidebar partial-->
        {% if  is_granted('ROLE_ADMIN') %}
            {{ include('_admin_sidebar.html.twig') }}
        {% elseif is_granted('ROLE_USER') %}
            {{ include('_sidebar.html.twig') }}
        {% endif %}

        <div id="main">
            <div class="col-md-12">
               {{ include('default/_flash_messages.html.twig') }}
            </div>
            <div class="container-fluid">
                {% block content %}
                {% endblock %}
            </div>
        </div>
    </body>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('lazy_sizes') }}
    {{ encore_entry_script_tags('main') }}
{% endblock %}

</html>
