{% extends 'base.html.twig' %}


{% block form %}
    {% block content %}
        {% form_theme form 'bootstrap_4_layout.html.twig' %}
        <div class="col-md-10">
            {{ form_start(form) }}
            <div class="h3">
                <h3 class="text-dark">Adicionar Escola ao seu Perfil</h3>
            </div><br/>
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-info mt-2">
                Salvar
            </button>
            {{ form_end(form) }}
            <div class="alert alert-info alert-dismissible fade show" style="margin-top: 30px">
                <i class="fa fa-info-circle" style="font-size: 20px">  Caso sua escola ainda não esteja em nosso sistema, favor cadastrá-la.</i>
                <hr>
                <p class="mb-0">Clique no botão abaixo de informação para cadastrar sua escola.</p>
            </div>
            <button class="btn btn-primary btn-lg btn-block" type="button" data-toggle="collapse" data-target="#collapseSchool" aria-expanded="false" aria-controls="collapseSchool">
                Nova Escola
            </button>
            <div class="collapse" id="collapseSchool">
                <div class="card card-body">
                    {{ render(controller(
                        'App\\Controller\\SchoolController::new'
                    )) }}
                </div>
            </div>


        </div>

    {% endblock %}
{% endblock %}

