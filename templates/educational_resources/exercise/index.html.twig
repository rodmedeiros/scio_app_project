{% extends 'base.html.twig' %}


{% block content %}

<div class="row">
    <div class="col-md-8">
        <div class="m-b-1 m-l-2">
            <a href="{{ path('exercise_new') }}" class="btn btn-outline-info">Sugerir</a>
            <a href="{{ path('profile_exercises') }}" class="btn purple">Minhas Sugestões</a>
        </div>
        {% for exercise in exercises %}
            <div class="d-flex justify-content-center m-0" >
                <div class="m-4 film-object shadow bg-white">
                    <h4 class="m-b-3">
                        Conteúdo: <span class="text-info"><strong>{{ exercise.content }}</strong></span>
                    </h4>
                    <span>Disciplina: <strong>{{ exercise.content.subject | capitalize }}</strong><br/></span>
                    <p>
                    <h5 class="m-t-2"><strong>Questão</strong></h5>
                        <span>{{ exercise.description | raw }}</span>
                    </p>
                    <a href="#" target="_blank"><span class="btn-label icon fa fa-paperclip lime-green-fa"></span>Anexar à prova</a>
                    {#                        <a href="{{ vich_uploader_asset(file, 'imageFile') }}" target="_blank"><span class="btn-label icon fa fa-download"></span>Download</a>#}
                </div>
            </div>
        {% endfor %}
    </div>
    {{ include('_side_filter.html.twig', {
        'contents':contents, 'subjects': subjects,
        'profile_subject': profile_subject,
        'path': 'exercises'}
        )
    }}
</div>
{% endblock %}
