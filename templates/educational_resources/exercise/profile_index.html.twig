{% extends 'base.html.twig' %}


{% block content %}

<div class="row">
    <div class="col-md-8">
        <div class="m-b-1 m-l-2">
            <a href="{{ path('exercise_new') }}" class="btn btn-outline-info">Sugerir</a>
        </div>
        {% for exercise in exercises %}
            <div class="d-flex justify-content-center m-0" >
                <div class="m-4 film-object shadow bg-white">
                    <h4 class="m-b-3">
                        Conteúdo: <span class="text-info"><strong>{{ exercise.content }}</strong></span>
                    </h4>
                    <span class="">Disciplina: {{ exercise.content.subject | capitalize }}<br/></span>
                    <p>
                    <h5 class="m-t-2"><strong>Descrição</strong></h5>
                    {% if exercise.description %}
                        {{ exercise.description | raw }}
                    {% else %}
                        <span class="text-warning">Não há descrição disponível</span>
                    {% endif %}
                    </p>
                    <a href="#" target="_blank"><span class="btn-label icon fa fa-paperclip"></span>Anexar à prova</a>
                    <a href="{{ path('exercise_edit', {'id':exercise.id}) }}" class="btn purple btn-sm float-right">Editar</a>
                </div>
            </div>
        {% endfor %}
    </div>
    {{ include('_side_filter.html.twig', {
        'contents':contents, 'subjects': subjects,
        'profile_subject': null,
        'path': 'profile_films'}
        )
    }}
</div>
{% endblock %}
