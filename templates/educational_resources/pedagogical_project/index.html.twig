{% extends 'base.html.twig' %}


{% block content %}

<div class="row">
    <div class="col-md-8">
        <div class="m-b-1 m-l-2">
            <a href="{{ path('project_new') }}" class="btn btn-outline-info">Novo</a>
            <a href="{{ path('profile_projects') }}" class="btn purple">Meus Projetos Pedagógicos</a>
        </div>
        {% for project in projects %}
                <div class="d-flex justify-content-center m-0" >
                    <div class="m-4 film-object shadow bg-white">
                        <h4 class="m-b-3">
                            {% if project.title %}
                                Título: {{ project.title }}
                            {% else %}
                                Título: <span class="text-warning">Não há título disponível</span>
                            {% endif %}
                        </h4>
                        <p>
                        <h5 class="m-t-2"><strong>Descrição</strong></h5>
                        {% if project.description %}
                            {{ project.description | raw }}
                        {% else %}
                            <span class="text-warning">Não há comentário disponível</span>
                        {% endif %}
                        </p>
                        <p>
                            Disciplina: {{ project.content.subject | capitalize }}<br/>
                            Conteúdo: {{ project.content }}
                        </p>
                        <a href="#" target="_blank"><span class="btn-label icon fa fa-download"></span>Download</a>
{#                        <a href="{{ vich_uploader_asset(file, 'imageFile') }}" target="_blank"><span class="btn-label icon fa fa-download"></span>Download</a>#}
                    </div>
                </div>
        {% endfor %}

    </div>
    {{ include('_side_filter.html.twig', {
        'contents':contents, 'subjects': subjects,
        'profile_subject': profile_subject,
        'path': 'projects'}
        )
    }}
</div>
{% endblock %}
